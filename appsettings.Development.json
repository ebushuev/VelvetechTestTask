{
  "SqlServer": {
    "UseInMemoryDatabase": false
  },
  "ConnectionStrings": {
    "DbConnection": "Server=localhost\\SQLEXPRESS;Database=TodoList;Trusted_Connection=True;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System.Net.Http.HttpClient": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "restrictedToMinimumLevel": "Error",
          "path": "Logs/debug.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff}] {Level:u3} {RequestId} {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Debug",
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff}] {Level:u3} {RequestId} {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
