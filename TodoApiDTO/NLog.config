<?xml version="1.0" encoding="utf-8"?>

<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="On" internalLogFile="c:\temp\nlog-internal.log">
  <extensions>
  </extensions>
  
  <variable name="logsDir" value="D:\logs"/>

  <targets>
    <target xsi:type="File" name="errorsFile" fileName="${var:logsDir}\${date:format=yyyy}\${date:format=MM}\errors\${shortdate}.log"
            layout="${longdate} ${uppercase:${level}} [${threadid}]${callsite}: ${message} ${exception:format=toString:maxInnerExceptionLevel=3} |url: ${aspnet-request-url}" />
  </targets>
  <rules>
    <logger name="*" minlevel="Error" writeTo="errorsFile" />
  </rules>
</nlog>