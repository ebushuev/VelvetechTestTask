{
    "Database": {
        "ConnectionString": "Data Source=localhost\\SQLEXPRESS;Initial Catalog=TodoDB;Integrated Security=False;User ID=sa;Password=mySecretPassword;",
        "CommandTimeout": 3600
    },
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console" ],
        "MinimumLevel": {
            "Default": "Debug",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "File",
                "Args": {
                    "path": "Logs\\Log.log",
                    "rollingInterval": "Day"
                }
            },
            {
                "Name": "Console"
            }
        ],
        "Enrich": [
            "FromLogContext",
            "WithExceptionDetails"
        ],
        "Properties": { "SourceApp": "TodoApiDTO" }
    },
    "AllowedHosts": "*"
}
